        <!-- Avoid language resource folders -->
        <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
    </PropertyGroup>
    
    <PropertyGroup>
        <NoWarn>1701;1702;CS0612;SA1312;NS2002</NoWarn>
    </PropertyGroup>

